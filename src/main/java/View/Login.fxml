<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="500.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controller.LoginController">

    <children>

        <!-- JUDUL -->
        <Label layoutX="210.0" layoutY="40.0"
               style="-fx-font-size: 24px; -fx-font-weight: bold;"
               text="Login" />

        <!-- USERNAME -->
        <Label layoutX="80.0" layoutY="125.0" text="Username" />
        <TextField fx:id="tfUsername"
                   layoutX="150.0" layoutY="120.0"
                   prefWidth="250.0"
                   promptText="Username" />

        <!-- PASSWORD -->
        <Label layoutX="80.0" layoutY="170.0" text="Password" />
        <PasswordField fx:id="tfPassword"
                       layoutX="150.0" layoutY="165.0"
                       prefWidth="250.0"
                       promptText="Password" />

        <!-- PERAN / ROLE -->
        <Label layoutX="80.0" layoutY="215.0" text="Peran" />
        <ComboBox fx:id="cbRole"
                  layoutX="150.0" layoutY="210.0"
                  prefWidth="250.0"
                  promptText="Pilih Peran" />

        <!-- TOMBOL LOGIN -->
        <Button fx:id="btnLogin"
                layoutX="200.0" layoutY="260.0"
                prefWidth="120.0"
                text="Login"
                onAction="#onLogin" />

        <!-- LINK BUAT AKUN -->
        <Hyperlink fx:id="linkRegister"
                   layoutX="180.0" layoutY="305.0"
                   text="Buat Akun Karyawan"
                   onAction="#onOpenRegister" />

    </children>
</AnchorPane>