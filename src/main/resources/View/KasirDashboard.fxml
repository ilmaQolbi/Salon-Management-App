<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import java.net.URL?>

<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.KasirController">
    <children>
        <BorderPane minHeight="600.0" minWidth="900.0">
            <stylesheets>
                <URL value="@../Style/kasir.css" />
            </stylesheets>

            <top>
                <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="900.0" spacing="20.0" styleClass="header-bar">
                    <padding>
                        <Insets left="20.0" right="20.0" />
                    </padding>
                    <children>
                        <Label text="KASIR SALON" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="20.0" />
                            </font>
                        </Label>
                        <Label fx:id="lblNamaKasir" text="Halo, [Nama Kasir]" textFill="#d7ccc8" />
                        <HBox alignment="CENTER_RIGHT" spacing="10.0" HBox.hgrow="ALWAYS">
                            <children>
                                <Button mnemonicParsing="false" onAction="#handleLaporanPenjualan" styleClass="btn-header" text="Laporan Penjualan" />
                                <Button mnemonicParsing="false" onAction="#handleLogout" styleClass="btn-logout" text="Logout" />
                            </children>
                        </HBox>
                    </children>
                </HBox>
            </top>

            <center>
                <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0" styleClass="main-content">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                    <children>

                        <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0" HBox.hgrow="ALWAYS">
                            <children>
                                <Label text="Pilih Layanan">
                                    <font>
                                        <Font name="System Bold" size="16.0" />
                                    </font>
                                </Label>
                                <TableView fx:id="tableLayanan" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="colNamaLayanan" prefWidth="250.0" text="Nama Layanan" />
                                        <TableColumn fx:id="colHargaLayanan" prefWidth="120.0" text="Harga" />
                                        <TableColumn fx:id="colActionAdd" prefWidth="80.0" text="Aksi" />
                                    </columns>
                                </TableView>
                            </children>
                        </VBox>

                        <VBox prefHeight="520.0" prefWidth="350.0" spacing="10.0" styleClass="cart-container">
                            <!-- DropShadow moved to CSS -->
                            <children>
                                <Label text="Keranjang Transaksi">
                                    <font>
                                        <Font name="System Bold" size="16.0" />
                                    </font>
                                </Label>

                                <TextField fx:id="txtNamaPelanggan" promptText="Nama Pelanggan" />

                                <TableView fx:id="tableKeranjang" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="colItemNama" prefWidth="180.0" text="Item" />
                                        <TableColumn fx:id="colItemHarga" prefWidth="100.0" text="Harga" />
                                    </columns>
                                </TableView>

                                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                                    <children>
                                        <Label text="Total:">
                                            <font>
                                                <Font size="18.0" />
                                            </font>
                                        </Label>
                                        <Label fx:id="lblTotalHarga" text="Rp 0" textFill="#5d4037">
                                            <font>
                                                <Font name="System Bold" size="22.0" />
                                            </font>
                                        </Label>
                                    </children>
                                </HBox>

                                <Button mnemonicParsing="false" onAction="#handleBayar" prefHeight="40.0" prefWidth="320.0" styleClass="btn-process" text="PROSES PEMBAYARAN" />
                                <Button mnemonicParsing="false" onAction="#handleReset" prefHeight="30.0" prefWidth="320.0" styleClass="btn-reset" text="Reset" />
                            </children>
                        </VBox>

                    </children>
                </HBox>
            </center>
        </BorderPane>

        <Button mnemonicParsing="false" onAction="#handleLaporKendala" styleClass="fab-btn" text="âš  Laporkan Kendala" StackPane.alignment="BOTTOM_LEFT">
            <StackPane.margin>
                <Insets bottom="20.0" left="20.0" />
            </StackPane.margin>
        </Button>
        

    </children>
</StackPane>
