<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="600.0" minWidth="900.0" prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: #ECF0F1;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.KaryawanController">

    <stylesheets>
        <URL value="@../Style/style.css" />
    </stylesheets>

    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="70.0" style="-fx-background-color: #2C3E50;" BorderPane.alignment="CENTER">
            <children>
                <Label text="STYLIST WORKSPACE" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="22.0" />
                    </font>
                    <HBox.margin>
                        <Insets left="25.0" />
                    </HBox.margin>
                </Label>
                <Label fx:id="lblNamaUser" text="| Halo, Stylist" textFill="#bdc3c7">
                    <HBox.margin>
                        <Insets left="15.0" />
                    </HBox.margin>
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>

                <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                    <children>
                        <Button mnemonicParsing="false" onAction="#handleRefresh" styleClass="button" style="-fx-background-color: #2980B9;" text="Refresh Data">
                            <HBox.margin>
                                <Insets right="10.0" />
                            </HBox.margin>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#handleLogout" styleClass="btn-danger" text="Logout">
                            <HBox.margin>
                                <Insets right="25.0" />
                            </HBox.margin>
                        </Button>
                    </children>
                </HBox>
            </children>
            <effect>
                <javafx.scene.effect.DropShadow color="#00000040" radius="10.0" spread="0.1" />
            </effect>
        </HBox>
    </top>

    <center>
        <VBox spacing="20.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
            </padding>
            <children>

                <HBox spacing="20.0">
                    <children>
                        <VBox prefWidth="250.0" styleClass="card-pane" style="-fx-background-color: linear-gradient(to right, #F39C12, #F1C40F);">
                            <children>
                                <Label text="Antrian Menunggu" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Label>
                                <Label fx:id="lblPending" text="0" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="36.0" />
                                    </font>
                                </Label>
                                <Label text="Pekerjaan belum selesai" textFill="#ffffffcc">
                                    <font>
                                        <Font size="12.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>

                        <VBox prefWidth="250.0" styleClass="card-pane" style="-fx-background-color: linear-gradient(to right, #27AE60, #2ECC71);">
                            <children>
                                <Label text="Selesai Hari Ini" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Label>
                                <Label fx:id="lblSelesai" text="0" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="36.0" />
                                    </font>
                                </Label>
                                <Label text="Layanan tuntas dikerjakan" textFill="#ffffffcc">
                                    <font>
                                        <Font size="12.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <VBox styleClass="card-pane" VBox.vgrow="ALWAYS">
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label styleClass="label-header" text="Daftar Antrian Pelanggan" />
                                <Label style="-fx-text-fill: #7f8c8d; -fx-font-style: italic;" text="(Urutan berdasarkan waktu masuk)" />
                            </children>
                            <VBox.margin>
                                <Insets bottom="15.0" />
                            </VBox.margin>
                        </HBox>

                        <TableView fx:id="tablePekerjaan" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colIdTransaksi" prefWidth="100.0" text="ID Order" />
                                <TableColumn fx:id="colPelanggan" prefWidth="200.0" text="Nama Pelanggan" />
                                <TableColumn fx:id="colLayanan" prefWidth="250.0" text="Layanan Diambil" />
                                <TableColumn fx:id="colWaktu" prefWidth="150.0" text="Waktu Masuk" />
                                <TableColumn fx:id="colStatus" prefWidth="120.0" style="-fx-alignment: CENTER;" text="Status" />
                                <TableColumn fx:id="colAction" prefWidth="150.0" style="-fx-alignment: CENTER;" text="Aksi Pengerjaan" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </VBox>

            </children>
        </VBox>
    </center>
</BorderPane>