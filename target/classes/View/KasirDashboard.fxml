<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="600.0" minWidth="900.0" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.KasirController">

    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="900.0" spacing="20.0" style="-fx-background-color: #2C3E50;">
            <padding>
                <Insets left="20.0" right="20.0" />
            </padding>
            <children>
                <Label text="KASIR SALON" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Label>
                <Label fx:id="lblNamaKasir" text="Halo, [Nama Kasir]" textFill="#bdc3c7" />
                <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                    <children>
                        <Button mnemonicParsing="false" onAction="#handleLogout" style="-fx-background-color: #E74C3C; -fx-text-fill: white;" text="Logout" />
                    </children>
                </HBox>
            </children>
        </HBox>
    </top>

    <center>
        <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0" style="-fx-background-color: #ECF0F1;">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>

                <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="Pilih Layanan">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>
                        <TableView fx:id="tableLayanan" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colNamaLayanan" prefWidth="250.0" text="Nama Layanan" />
                                <TableColumn fx:id="colHargaLayanan" prefWidth="120.0" text="Harga" />
                                <TableColumn fx:id="colActionAdd" prefWidth="80.0" text="Aksi" />
                            </columns>
                        </TableView>
                    </children>
                </VBox>

                <VBox prefHeight="520.0" prefWidth="350.0" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 5; -fx-padding: 15;">
                    <effect>
                        <javafx.scene.effect.DropShadow color="#00000020" />
                    </effect>
                    <children>
                        <Label text="Keranjang Transaksi">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>

                        <TextField fx:id="txtNamaPelanggan" promptText="Nama Pelanggan" />

                        <TableView fx:id="tableKeranjang" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colItemNama" prefWidth="180.0" text="Item" />
                                <TableColumn fx:id="colItemHarga" prefWidth="100.0" text="Harga" />
                            </columns>
                        </TableView>

                        <HBox alignment="CENTER_RIGHT" spacing="10.0">
                            <children>
                                <Label text="Total:">
                                    <font>
                                        <Font size="18.0" />
                                    </font>
                                </Label>
                                <Label fx:id="lblTotalHarga" text="Rp 0" textFill="#e74c3c">
                                    <font>
                                        <Font name="System Bold" size="22.0" />
                                    </font>
                                </Label>
                            </children>
                        </HBox>

                        <Button mnemonicParsing="false" onAction="#handleBayar" prefHeight="40.0" prefWidth="320.0" style="-fx-background-color: #27AE60; -fx-text-fill: white; -fx-font-weight: bold;" text="PROSES PEMBAYARAN" />
                        <Button mnemonicParsing="false" onAction="#handleReset" prefHeight="30.0" prefWidth="320.0" style="-fx-background-color: #95a5a6; -fx-text-fill: white;" text="Reset" />
                    </children>
                </VBox>

            </children>
        </HBox>
    </center>
</BorderPane>