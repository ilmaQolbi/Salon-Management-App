<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.effect.GaussianBlur?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.SVGPath?>


<StackPane styleClass="main-background" stylesheets="@../Style/style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.LoginController">

    <children>
        <AnchorPane>
            <children>
                <!-- Background Blobs -->
                <Circle layoutX="300.0" layoutY="200.0" opacity="0.7" radius="100.0" stroke="TRANSPARENT">
                    <fill>
                        <Color red="0.17" green="0.80" blue="0.80" />
                    </fill>
                    <effect>
                        <GaussianBlur radius="60.0" />
                    </effect>
                </Circle>
                <Circle layoutX="700.0" layoutY="500.0" opacity="0.7" radius="100.0" stroke="TRANSPARENT">
                    <fill>
                        <Color red="0.75" green="0.40" blue="0.90" />
                    </fill>
                    <effect>
                        <GaussianBlur radius="60.0" />
                    </effect>
                </Circle>
            </children>
        </AnchorPane>

        <!-- Glass Card -->
        <VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefWidth="420.0" styleClass="glass-card">
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="40.0" />
            </padding>
            <effect>
                <DropShadow color="#0000001f" height="60.0" radius="29.5" width="60.0" />
            </effect>

            <children>
                <!-- Icon & Title -->
                <StackPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="64.0" prefWidth="64.0" styleClass="icon-container">
                    <children>
                        <SVGPath content="M6 6 L18 18 M6 18 L18 6 M8 8 A2 2 0 1 0 8 4 A2 2 0 1 0 8 8 M16 16 A2 2 0 1 0 16 20 A2 2 0 1 0 16 16" fill="WHITE" scaleX="1.5" scaleY="1.5" stroke="WHITE" strokeWidth="2" />
                    </children>
                    <VBox.margin>
                        <Insets bottom="16.0" />
                    </VBox.margin>
                </StackPane>

                <Label styleClass="title-text" text="Salon Login" />
                <Label styleClass="subtitle-text" text="Silakan masuk untuk melanjutkan">
                    <VBox.margin>
                        <Insets bottom="20.0" />
                    </VBox.margin>
                </Label>

                <!-- FORM SECTION -->
                <VBox spacing="15.0">
                    <children>

                        <!-- Email Input (tfEmail) -->
                        <VBox spacing="5.0">
                            <children>
                                <Label styleClass="input-label" text="EMAIL" />
                                <StackPane alignment="CENTER_LEFT">
                                    <children>
                                        <!-- fx:id disesuaikan dengan Controller: tfEmail -->
                                        <TextField fx:id="tfEmail" promptText="Masukan email anda" styleClass="custom-input" />
                                        <SVGPath content="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z M22 6l-10 7L2 6" fill="TRANSPARENT" scaleX="0.8" scaleY="0.8" stroke="#94a3b8" strokeWidth="2" translateX="12.0" />
                                    </children>
                                </StackPane>
                            </children>
                        </VBox>

                        <!-- Password Input (tfPassword) -->
                        <VBox spacing="5.0">
                            <children>
                                <Label styleClass="input-label" text="PASSWORD" />
                                <StackPane alignment="CENTER_LEFT">
                                    <children>
                                        <!-- fx:id disesuaikan dengan Controller: tfPassword -->
                                        <PasswordField fx:id="tfPassword" promptText="••••••••" styleClass="custom-input" />
                                        <SVGPath content="M12 2a5 5 0 0 0-5 5v3H6a2 2 0 0 0-2 2v8a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-8a2 2 0 0 0-2-2h-1v-3a5 5 0 0 0-5-5zm0 2a3 3 0 0 1 3 3v3H9V7a3 3 0 0 1 3-3z" fill="TRANSPARENT" scaleX="0.8" scaleY="0.8" stroke="#94a3b8" strokeWidth="2" translateX="12.0" />
                                    </children>
                                </StackPane>
                            </children>
                        </VBox>

                        <!-- Role Select (cbRole) -->
                        <VBox spacing="5.0">
                            <children>
                                <Label styleClass="input-label" text="LOGIN SEBAGAI" />
                                <StackPane alignment="CENTER_LEFT">
                                    <children>
                                        <!-- fx:id disesuaikan dengan Controller: cbRole -->
                                        <ComboBox fx:id="cbRole" maxWidth="Infinity" promptText="Pilih Peran" styleClass="custom-combo">
                                            <!-- Items akan diisi lewat method initialize di Controller -->
                                        </ComboBox>
                                        <SVGPath content="M20 7h-4V4c0-1.10457-.89543-2-2-2h-4c-1.10457 0-2 .89543-2 2v3H4c-1.10457 0-2 .89543-2 2v11c0 1.10457.89543 2 2 2h16c1.10457 0 2-.89543 2-2V9c0-1.10457-.89543-2-2-2zM8 4h8v3H8V4z" fill="TRANSPARENT" scaleX="0.8" scaleY="0.8" stroke="#94a3b8" strokeWidth="2" translateX="12.0" mouseTransparent="true"/>
                                    </children>
                                </StackPane>
                            </children>
                        </VBox>

                        <!-- Login Button (btnLogin & onLogin) -->
                        <!-- fx:id disesuaikan dengan Controller: btnLogin -->
                        <!-- onAction disesuaikan dengan Controller: #onLogin -->
                        <Button fx:id="btnLogin" maxWidth="Infinity" mnemonicParsing="false" onAction="#KeLogin" styleClass="primary-button" text="MASUK APLIKASI">
                            <graphic>
                                <SVGPath content="M5 12h14M12 5l7 7-7 7" fill="TRANSPARENT" stroke="WHITE" strokeWidth="2.5" />
                            </graphic>
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </Button>

                    </children>
                </VBox>

                <!-- Footer Link (linkRegister & onOpenRegister) -->
                <HBox alignment="CENTER" spacing="5.0">
                    <children>
                        <Label text="Belum punya akun?" textFill="#64748b">
                            <styleClass>
                                <String fx:value="footer-text" />
                            </styleClass>
                        </Label>
                        <!-- fx:id disesuaikan dengan Controller: linkRegister -->
                        <!-- onAction disesuaikan dengan Controller: #onOpenRegister -->
                        <Hyperlink fx:id="linkRegister" onAction="#onOpenRegister" text="Daftar Karyawan" textFill="#0d9488" styleClass="footer-link"/>
                    </children>
                    <VBox.margin>
                        <Insets top="25.0" />
                    </VBox.margin>
                </HBox>

            </children>
        </VBox>

        <!-- Footer Copyright -->
        <Label text="© 2024 Salon Management System" textFill="#94a3b8" StackPane.alignment="BOTTOM_CENTER">
            <StackPane.margin>
                <Insets bottom="20.0" />
            </StackPane.margin>
            <styleClass>
                <String fx:value="copyright-text" />
            </styleClass>
        </Label>

    </children>
</StackPane>