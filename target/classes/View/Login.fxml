<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.SVGPath?>

<HBox stylesheets="@../Style/style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.LoginController">
    <!-- Left Side: Branding (Grows to fill) -->
    <VBox fx:id="brandingSection" alignment="CENTER" styleClass="branding-section" HBox.hgrow="ALWAYS">
        <children>
            <Label styleClass="branding-title" text="Aplikasi" />
            <Label styleClass="branding-title" text="Salon No 1" />
            <Label styleClass="branding-subtitle" text="Kelola salonmu dengan mudah dan elegan" textAlignment="CENTER" wrapText="true">
                <VBox.margin>
                    <Insets top="15.0" />
                </VBox.margin>
            </Label>
        </children>
    </VBox>

    <!-- Right Side: Login Form (Fixed Width) -->
    <StackPane fx:id="formSection" prefWidth="480.0" styleClass="form-section">
        <children>
            <VBox alignment="CENTER" maxWidth="400.0" spacing="25.0" styleClass="form-card">
                <children>
                    <!-- Header Form -->
                    <VBox alignment="CENTER" spacing="5.0">
                        <Label styleClass="title-text" text="Selamat Datang" />
                        <Label styleClass="subtitle-text" text="Masuk ke akun anda untuk melanjutkan" />
                    </VBox>

                    <!-- Form Fields -->
                    <VBox spacing="15.0">
                        <!-- Email -->
                        <VBox spacing="5.0">
                            <Label styleClass="input-label" text="EMAIL" />
                            <StackPane alignment="CENTER_LEFT">
                                <TextField fx:id="tfEmail" promptText="Masukan email anda" styleClass="custom-input" />
                                <SVGPath content="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z M22 6l-10 7L2 6" fill="TRANSPARENT" scaleX="0.8" scaleY="0.8" stroke="#94a3b8" strokeWidth="2" translateX="12.0" />
                            </StackPane>
                        </VBox>

                        <!-- Password -->
                        <VBox spacing="5.0">
                            <Label styleClass="input-label" text="PASSWORD" />
                            <StackPane alignment="CENTER_LEFT">
                                <PasswordField fx:id="tfPassword" promptText="••••••••" styleClass="custom-input" />
                                <SVGPath content="M12 2a5 5 0 0 0-5 5v3H6a2 2 0 0 0-2 2v8a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-8a2 2 0 0 0-2-2h-1v-3a5 5 0 0 0-5-5zm0 2a3 3 0 0 1 3 3v3H9V7a3 3 0 0 1 3-3z" fill="TRANSPARENT" scaleX="0.8" scaleY="0.8" stroke="#94a3b8" strokeWidth="2" translateX="12.0" />
                            </StackPane>
                        </VBox>

                        <!-- Role -->
                        <VBox spacing="5.0">
                            <Label styleClass="input-label" text="LOGIN SEBAGAI" />
                            <StackPane alignment="CENTER_LEFT">
                                <ComboBox fx:id="cbRole" maxWidth="Infinity" promptText="Pilih Peran" styleClass="custom-combo" />
                                <SVGPath content="M20 7h-4V4c0-1.10457-.89543-2-2-2h-4c-1.10457 0-2 .89543-2 2v3H4c-1.10457 0-2 .89543-2 2v11c0 1.10457.89543 2 2 2h16c1.10457 0 2-.89543 2-2V9c0-1.10457-.89543-2-2-2zM8 4h8v3H8V4z" fill="TRANSPARENT" mouseTransparent="true" scaleX="0.8" scaleY="0.8" stroke="#94a3b8" strokeWidth="2" translateX="12.0" />
                            </StackPane>
                        </VBox>

                        <Button fx:id="btnLogin" maxWidth="Infinity" mnemonicParsing="false" onAction="#KeLogin" styleClass="primary-button" text="MASUK APLIKASI">
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </Button>
                    </VBox>

                    <!-- Footer -->
                    <HBox alignment="CENTER" spacing="5.0">
                        <Label styleClass="footer-text" text="Belum punya akun?" />
                        <Hyperlink fx:id="linkRegister" onAction="#keHalamanRegister" styleClass="footer-link" text="Daftar Karyawan" />
                    </HBox>
                </children>
            </VBox>
        </children>
    </StackPane>
</HBox>