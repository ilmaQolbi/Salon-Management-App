<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.SVGPath?>

<HBox stylesheets="@../Style/style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.RegisterController">
    <!-- Left Side: Branding (Grows to fill) -->
    <VBox fx:id="brandingSection" alignment="CENTER" styleClass="branding-section" HBox.hgrow="ALWAYS">
        <children>
            <Label styleClass="branding-title" text="Aplikasi" />
            <Label styleClass="branding-title" text="Salon No 1" />
            <Label styleClass="branding-subtitle" text="Bergabunglah dengan tim terbaik kami" textAlignment="CENTER" wrapText="true">
                <VBox.margin>
                    <Insets top="15.0" />
                </VBox.margin>
            </Label>
        </children>
    </VBox>

    <!-- Right Side: Register Form (Fixed) -->
    <StackPane fx:id="formSection" prefWidth="480.0" styleClass="form-section">
        <children>
            <VBox alignment="CENTER" maxWidth="400.0" spacing="25.0" styleClass="form-card">
                <children>
                    <!-- Header Form -->
                    <VBox alignment="CENTER" spacing="5.0">
                        <Label styleClass="title-text" text="Buat Akun Baru" />
                        <Label styleClass="subtitle-text" text="Lengkapi data karyawan di bawah ini" />
                    </VBox>

                    <!-- Form Fields -->
                    <VBox spacing="15.0">
                        <!-- Nama Input -->
                        <VBox spacing="5.0">
                            <Label styleClass="input-label" text="NAMA KARYAWAN" />
                            <StackPane alignment="CENTER_LEFT">
                                <TextField fx:id="tfNama" promptText="Nama lengkap karyawan" styleClass="custom-input" />
                            </StackPane>
                        </VBox>

                        <!-- Email Input -->
                        <VBox spacing="5.0">
                            <Label styleClass="input-label" text="EMAIL KARYAWAN" />
                            <StackPane alignment="CENTER_LEFT">
                                <TextField fx:id="tfEmail" promptText="contoh@salon.com" styleClass="custom-input" />
                                <SVGPath content="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z M22 6l-10 7L2 6" fill="TRANSPARENT" scaleX="0.8" scaleY="0.8" stroke="#94a3b8" strokeWidth="2" translateX="12.0" />
                            </StackPane>
                        </VBox>

                        <!-- Password Input -->
                        <VBox spacing="5.0">
                            <Label styleClass="input-label" text="PASSWORD" />
                            <StackPane alignment="CENTER_LEFT">
                                <PasswordField fx:id="tfPassword" promptText="••••••••" styleClass="custom-input" />
                                <SVGPath content="M12 2a5 5 0 0 0-5 5v3H6a2 2 0 0 0-2 2v8a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-8a2 2 0 0 0-2-2h-1v-3a5 5 0 0 0-5-5zm0 2a3 3 0 0 1 3 3v3H9V7a3 3 0 0 1 3-3z" fill="TRANSPARENT" scaleX="0.8" scaleY="0.8" stroke="#94a3b8" strokeWidth="2" translateX="12.0" />
                            </StackPane>
                        </VBox>
                        
                        <!-- Konfirmasi Password Input -->
                        <VBox spacing="5.0">
                            <Label styleClass="input-label" text="KONFIRMASI PASSWORD" />
                            <StackPane alignment="CENTER_LEFT">
                                <PasswordField fx:id="tfConfirmPassword" promptText="••••••••" styleClass="custom-input" />
                                <SVGPath content="M12 2a5 5 0 0 0-5 5v3H6a2 2 0 0 0-2 2v8a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-8a2 2 0 0 0-2-2h-1v-3a5 5 0 0 0-5-5zm0 2a3 3 0 0 1 3 3v3H9V7a3 3 0 0 1 3-3z" fill="TRANSPARENT" scaleX="0.8" scaleY="0.8" stroke="#94a3b8" strokeWidth="2" translateX="12.0" />
                            </StackPane>
                        </VBox>

                        <Button fx:id="btnRegister" maxWidth="Infinity" mnemonicParsing="false" onAction="#Registrasi" styleClass="primary-button" text="DAFTAR SEKARANG">
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </Button>
                    </VBox>

                    <!-- Footer -->
                    <HBox alignment="CENTER" spacing="5.0">
                        <Label styleClass="footer-text" text="Sudah punya akun?" />
                        <Hyperlink fx:id="linkBackToLogin" onAction="#kembaliLogin" styleClass="footer-link" text="Masuk disini" />
                    </HBox>
                </children>
            </VBox>
        </children>
    </StackPane>
</HBox>